<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- MAPA A PANTALLA COMPLETA -->
    <com.google.android.gms.maps.MapView
        android:id="@+id/mapFullReco"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- BOTÓN VOLVER (ARRIBA IZQUIERDA) -->
    <ImageButton
        android:id="@+id/btnBackReco"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        android:background="@drawable/bg_card_soft"
        android:contentDescription="Volver"
        android:elevation="4dp"
        android:src="@drawable/ic_arrow_forward"
        android:rotation="180"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- ESTADO DE LA RECOLECCIÓN (ARRIBA CENTRO) -->
    <TextView
        android:id="@+id/tvStatusReco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/bg_card_soft"
        android:elevation="4dp"
        android:padding="12dp"
        android:text="Cargando..."
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="?attr/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- BOTÓN CENTRAR CÁMARA (ABAJO DERECHA) -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabCenterReco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:contentDescription="Centrar mapa"
        android:src="@android:drawable/ic_menu_mylocation"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

