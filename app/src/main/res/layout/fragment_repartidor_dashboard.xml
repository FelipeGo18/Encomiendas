<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Título -->
    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mis entregas asignadas"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="4dp" />

    <!-- Container horizontal para reputación y botón -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp">

        <!-- Reputación promedio del recolector -->
        <TextView
            android:id="@+id/tvReputacion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Reputación: —" />

        <!-- Botón para ver todas las calificaciones -->
        <Button
            android:id="@+id/btnVerCalificaciones"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ver mis calificaciones"
            android:textSize="12sp"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_marginStart="8dp" />

    </LinearLayout>

    <!-- Mensaje cuando no hay entregas -->
    <TextView
        android:id="@+id/tvEmpty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No tienes entregas pendientes"
        android:textAlignment="center"
        android:visibility="gone"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:layout_marginBottom="8dp" />

    <!-- Lista de entregas -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvEntregas"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

</LinearLayout>