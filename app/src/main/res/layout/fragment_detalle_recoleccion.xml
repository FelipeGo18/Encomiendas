<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="never"
    android:fillViewport="true">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Encabezado -->
        <TextView
            android:id="@+id/tvHeader"
            android:text="Asignación #—"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvEstado"
            android:text="Estado: —"
            android:layout_marginTop="2dp"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Resumen del pedido (DETALLE) -->
        <TextView
            android:id="@+id/tvPedido"
            android:text="—"
            android:layout_marginTop="6dp"
            android:textColor="@android:color/darker_gray"
            android:textSize="13sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Foto evidencia -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnTomarFoto"
            android:text="Tomar foto evidencia"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/ivFoto"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="8dp"
            android:scaleType="centerCrop"
            android:background="#222" />

        <!-- Firma -->
        <TextView
            android:text="Firma del remitente/guardia"
            android:layout_marginTop="16dp"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.hfad.encomiendas.ui.widgets.SignatureView
            android:id="@+id/signatureView"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_marginTop="8dp"
            android:background="#000000" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnGuardarFirma"
            android:text="Guardar firma"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLimpiarFirma"
            android:text="Limpiar firma"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_marginTop="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Cierre -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnActivarGuia"
            android:text="Activar guía"
            android:layout_marginTop="16dp"
            android:enabled="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
</ScrollView>
