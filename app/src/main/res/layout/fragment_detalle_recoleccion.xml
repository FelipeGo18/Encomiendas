<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollDetalleRecoleccion"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Encabezado (solo orden/estado) -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:strokeWidth="1dp"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvTitulo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="â€”"
                    android:textAppearance="@style/TextAppearance.Material3.TitleMedium"/>

                <TextView
                    android:id="@+id/tvSub"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Orden: â€”"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Seguimiento: ETA + Timeline + Mapa Recolector -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:strokeWidth="1dp"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Contenedor del mapa (mapa reducido opcional) -->
                <FrameLayout
                    android:id="@+id/frameMapaMini"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginBottom="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <com.google.android.gms.maps.MapView
                        android:id="@+id/map_recolector"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/mapa_recolector_desc"/>

                    <!-- BotÃ³n flotante para expandir mapa -->
                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/fabExpandMap"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top|end"
                        android:layout_margin="12dp"
                        android:src="@android:drawable/ic_dialog_info"
                        android:contentDescription="Expandir mapa"
                        app:fabSize="mini"
                        app:backgroundTint="@color/colorPrimary"
                        app:tint="@android:color/white" />

                </FrameLayout>

                <!-- BotÃ³n adicional debajo del mapa -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnVerMapaCompleto"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“ Ver mapa en pantalla completa"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvTimeline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Foto -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:strokeWidth="1dp"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Foto de evidencia"
                    android:textStyle="bold"/>

                <ImageView
                    android:id="@+id/ivFoto"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="8dp"
                    android:scaleType="centerCrop"
                    android:background="#22000000"
                    android:contentDescription="@string/foto_evidencia_desc"
                    android:clickable="true"
                    android:focusable="true"/>

                <!-- (1) Sin foto: botÃ³n Ãºnico -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnTomarFoto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tomar foto"
                    android:layout_marginTop="12dp"/>

                <!-- (2) Foto pendiente: Editar + Confirmar -->
                <LinearLayout
                    android:id="@+id/llEditarConfirmar"
                    android:visibility="gone"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnEditarFoto"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Editar"/>

                    <Space
                        android:layout_width="12dp"
                        android:layout_height="1dp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnConfirmarFoto"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Confirmar"/>
                </LinearLayout>

                <!-- (3) Foto confirmada: solo Editar -->
                <LinearLayout
                    android:id="@+id/llSoloEditar"
                    android:visibility="gone"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSoloEditar"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Editar"/>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Firma -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:strokeWidth="1dp">

            <LinearLayout
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Firma del receptor"
                    android:textStyle="bold"/>

                <!-- Vista PREVIEW (se muestra cuando hay firma guardada) -->
                <ImageView
                    android:id="@+id/ivFirmaPreview"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:layout_marginTop="8dp"
                    android:background="@android:color/white"
                    android:scaleType="fitCenter"
                    android:contentDescription="@string/firma_preview_desc"
                    android:visibility="gone"/>

                <!-- Vista de DIBUJO (solo cuando no hay firma o guÃ­a no activa) -->
                <com.hfad.encomiendas.ui.widgets.SignatureView
                    android:id="@+id/signView"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:layout_marginTop="8dp"
                    android:background="@android:color/white"
                    android:contentDescription="@string/firma_dibujo_desc"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnLimpiar"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Limpiar"/>

                    <Space
                        android:layout_width="12dp"
                        android:layout_height="1dp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnGuardarFirma"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Guardar firma"/>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/tvEstado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginTop="12dp"
            android:gravity="center"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>