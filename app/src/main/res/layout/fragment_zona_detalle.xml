<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvTituloZona"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- TARJETA: MAPA -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="16dp"
            app:strokeWidth="1dp">

            <FrameLayout
                android:id="@+id/map_container"
                android:layout_width="match_parent"
                android:layout_height="240dp">

                <!-- Overlay info pequeña -->
                <TextView
                    android:id="@+id/tvInfoMini"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:padding="6dp"
                    android:textSize="11sp"
                    android:textColor="#FFFFFF"
                    android:background="#66000000"
                    android:text=""/>

                <!-- Leyenda -->
                <LinearLayout
                    android:id="@+id/legendLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|start"
                    android:layout_margin="8dp"
                    android:orientation="horizontal"
                    android:padding="6dp"
                    android:background="#66000000">

                    <TextView
                        android:id="@+id/legendPendiente"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="P"
                        android:textColor="#FF9800"
                        android:textStyle="bold"
                        android:layout_marginEnd="12dp"/>
                    <TextView
                        android:id="@+id/legendParada"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="R"
                        android:textColor="#2196F3"
                        android:textStyle="bold"
                        android:layout_marginEnd="12dp"/>
                    <TextView
                        android:id="@+id/legendRecolector"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="C"
                        android:textColor="#4CAF50"
                        android:textStyle="bold"/>
                </LinearLayout>

                <!-- Botón follow -->
                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/btnFollow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|end"
                    android:layout_margin="12dp"
                    android:contentDescription="@string/follow_off"
                    app:srcCompat="@drawable/ic_recolector"/>

            </FrameLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Botón para generar/asignar ruta en esta zona -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnGenerarRuta"
            android:text="Generar ruta"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Botón para generar ruta basada en polígono -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnGenerarRutaPoligono"
            android:text="Generar ruta (polígono)"
            android:visibility="gone"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="Pendientes (sin asignar)"
            android:layout_marginTop="12dp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvPendientes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"/>

        <TextView
            android:text="Asignadas"
            android:layout_marginTop="16dp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvAsignadas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"/>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>