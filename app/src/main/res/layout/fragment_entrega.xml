<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvGuia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Guía: —"/>

        <TextView
            android:id="@+id/tvDestino"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Destino: —"
            android:layout_marginBottom="6dp"/>

        <TextView
            android:id="@+id/tvEstado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EN RUTA"
            android:layout_marginBottom="12dp"/>

        <!-- OTP -->
        <EditText
            android:id="@+id/etOtp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="OTP (6 dígitos)"
            android:inputType="number"
            android:maxLength="6"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnValidarOtp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Validar OTP"
            android:layout_marginTop="6dp"/>

        <!-- Foto POD -->
        <ImageView
            android:id="@+id/ivFoto"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="12dp"
            android:scaleType="centerCrop"
            android:background="#22000000"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnTomarFoto"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Tomar foto"/>

            <Space android:layout_width="8dp" android:layout_height="1dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPreviewFoto"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ver foto"/>
        </LinearLayout>

        <!-- Firma -->
        <com.hfad.encomiendas.ui.widgets.SignatureView
            android:id="@+id/signView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="12dp"
            android:background="@android:color/white"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnLimpiar"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Limpiar"/>

            <Space android:layout_width="8dp" android:layout_height="1dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnGuardarFirma"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Guardar firma"/>
        </LinearLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
