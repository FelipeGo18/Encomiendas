<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <!-- LOGIN -->
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.hfad.encomiendas.ui.LoginFragment"
        android:label="Iniciar sesión">
        <!-- Ir a registro -->
        <action
            android:id="@+id/action_login_to_registro"
            app:destination="@id/registroRemitenteFragment" />
        <!-- Entrar como REMITENTE -->
        <action
            android:id="@+id/action_login_to_recoleccion"
            app:destination="@id/solicitarRecoleccionFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
        <!-- Entrar como ASIGNADOR -->
        <action
            android:id="@+id/action_login_to_asignador"
            app:destination="@id/asignadorFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
        <!-- Entrar como RECOLECTOR -->
        <action
            android:id="@+id/action_login_to_misAsignaciones"
            app:destination="@id/misAsignacionesFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
        <!-- Ir a HUB -->
        <action
            android:id="@+id/action_login_to_hub"
            app:destination="@id/hubDashboardFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
        <!-- Ir a Home (Remitente) -->
        <action
            android:id="@+id/action_login_to_home"
            app:destination="@id/homeDashboardFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <!-- REGISTRO (Remitente) -->
    <fragment
        android:id="@+id/registroRemitenteFragment"
        android:name="com.hfad.encomiendas.ui.RegistroRemitenteFragment"
        android:label="Registro">
        <action
            android:id="@+id/action_registro_to_login"
            app:destination="@id/loginFragment" />
    </fragment>

    <!-- REMITENTE: Solicitar recolección -->
    <fragment
        android:id="@+id/solicitarRecoleccionFragment"
        android:name="com.hfad.encomiendas.ui.SolicitarRecoleccionFragment"
        android:label="Solicitar recolección" />

    <!-- ASIGNADOR: Panel por zonas -->
    <fragment
        android:id="@+id/asignadorFragment"
        android:name="com.hfad.encomiendas.ui.AsignadorFragment"
        android:label="Asignador" >
        <!-- Ver detalle de una zona concreta -->
        <action
            android:id="@+id/action_asignador_to_zonaDetalle"
            app:destination="@id/zonaDetalleFragment" />
        <action
            android:id="@+id/action_asignador_to_gestionZonas"
            app:destination="@id/gestionZonasFragment" />
    </fragment>

    <!-- NUEVO: Gestión de Zonas -->
    <fragment
        android:id="@+id/gestionZonasFragment"
        android:name="com.hfad.encomiendas.ui.GestionZonasFragment"
        android:label="Zonas" >
        <action
            android:id="@+id/action_gestionZonas_to_zoneMapEditor"
            app:destination="@id/zoneMapEditorFragment" />
    </fragment>

    <!-- Editor de polígono de zona -->
    <fragment
        android:id="@+id/zoneMapEditorFragment"
        android:name="com.hfad.encomiendas.ui.ZoneMapEditorFragment"
        android:label="Editar Zona">
        <argument android:name="zoneId" app:argType="integer" android:defaultValue="-1" />
    </fragment>

    <!-- Home Dashboard (remitente) con acciones a solicitar y mapa de solicitud -->
    <fragment
        android:id="@+id/homeDashboardFragment"
        android:name="com.hfad.encomiendas.ui.HomeDashboardFragment"
        android:label="Inicio">
        <action
            android:id="@+id/action_home_to_solicitar"
            app:destination="@id/solicitarRecoleccionFragment" />
        <action
            android:id="@+id/action_home_to_solicitudMapa"
            app:destination="@id/solicitudMapaFragment" />
    </fragment>

    <!-- Ver una solicitud individual en mapa -->
    <fragment
        android:id="@+id/solicitudMapaFragment"
        android:name="com.hfad.encomiendas.ui.SolicitudMapaFragment"
        android:label="Solicitud en mapa" />

    <!-- Ver ruta / punto de recolección -->
    <fragment
        android:id="@+id/recoleccionMapaFragment"
        android:name="com.hfad.encomiendas.ui.RecoleccionMapaFragment"
        android:label="Recolección en mapa" />

    <!-- Detalle recolección con acción al mapa -->
    <fragment
        android:id="@+id/detalleRecoleccionFragment"
        android:name="com.hfad.encomiendas.ui.DetalleRecoleccionFragment"
        android:label="Detalle de recolección">
        <argument android:name="asignacionId" app:argType="integer" />
        <action
            android:id="@+id/action_detalle_to_recoleccionMapa"
            app:destination="@id/recoleccionMapaFragment" />
    </fragment>

    <!-- ASIGNADOR: Detalle de zona (pendientes/asignadas) -->
    <fragment
        android:id="@+id/zonaDetalleFragment"
        android:name="com.hfad.encomiendas.ui.ZonaDetalleFragment"
        android:label="Detalle de zona">
        <argument
            android:name="fecha"
            app:argType="string" />
        <argument
            android:name="zona"
            app:argType="string" />
        <argument
            android:name="zoneId"
            app:argType="integer"
            android:defaultValue="-1" />
    </fragment>

    <!-- RECOLECTOR: Lista de asignaciones propias -->
    <fragment
        android:id="@+id/misAsignacionesFragment"
        android:name="com.hfad.encomiendas.ui.MisAsignacionesFragment"
        android:label="Mis asignaciones">
        <action
            android:id="@+id/action_misAsignaciones_to_detalle"
            app:destination="@id/detalleRecoleccionFragment" />
    </fragment>

    <!-- NUEVO: Dashboard HUB -->
    <fragment
        android:id="@+id/hubDashboardFragment"
        android:name="com.hfad.encomiendas.ui.HubDashboardFragment"
        android:label="HUB" />

    <!-- NUEVO: Dashboard REPARTIDOR -->
    <fragment
        android:id="@+id/repartidorDashboardFragment"
        android:name="com.hfad.encomiendas.ui.RepartidorDashboardFragment"
        android:label="Repartidor" />

    <!-- Fragment de Entrega (faltaba, añadido) -->
    <fragment
        android:id="@+id/entregaFragment"
        android:name="com.hfad.encomiendas.ui.EntregaFragment"
        android:label="Entrega">
        <argument
            android:name="manifiestoItemId"
            app:argType="integer" />
    </fragment>

    <!-- NUEVO: vista previa ruta polígono -->
    <fragment
        android:id="@+id/poligonoRutaPreviewFragment"
        android:name="com.hfad.encomiendas.ui.PoligonoRutaPreviewFragment"
        android:label="Ruta (polígono)">
        <argument android:name="zoneId" app:argType="integer" android:defaultValue="-1" />
        <argument android:name="fecha" app:argType="string" />
    </fragment>

    <!-- NUEVO: Mapa fullscreen de zona -->
    <fragment
        android:id="@+id/zonaMapaFullFragment"
        android:name="com.hfad.encomiendas.ui.ZonaMapaFullFragment"
        android:label="Mapa de zona">
        <argument android:name="fecha" app:argType="string" />
        <argument android:name="zona" app:argType="string" />
        <argument android:name="zoneId" app:argType="integer" android:defaultValue="-1" />
    </fragment>

</navigation>
